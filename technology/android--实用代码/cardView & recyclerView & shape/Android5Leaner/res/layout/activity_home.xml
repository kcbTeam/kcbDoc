<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    android:padding="@dimen/dp_16" >

    <Button
        android:id="@+id/button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/home_button_bg"
        android:elevation="@dimen/dp_5"
        android:text="@string/start"
        android:textColor="@android:color/white" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_48"
        card_view:cardBackgroundColor="#ccffff"
        card_view:cardCornerRadius="@dimen/dp_5"
        card_view:cardElevation="@dimen/dp_5"
        card_view:cardMaxElevation="@dimen/dp_10"
        card_view:cardPreventCornerOverlap="true"
        card_view:contentPadding="@dimen/dp_5" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            android:background="@android:color/black"
            android:padding="@dimen/dp_16"
            android:text="@string/cardview"
            android:textColor="@android:color/white" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" >
    </android.support.v7.widget.RecyclerView>

</LinearLayout>